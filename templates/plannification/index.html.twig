{% extends 'base.html.twig' %}

{% block title %}
    Plannification
{% endblock %}

{% block titlenumber %}
        Plannifier une session de cour
{% endblock %}

{% block content %}

    <div class="col-12">
            <form class="searchbox" action="GET">
                <button type="button" class="btn btn-primary">
                <a href="{{ path('app_plannification') }}" class=" link-light text-decoration-none">Creer une plannification</a>
                </button>
            </form>
        </div>

   
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Date</th>
                            <th scope="col">heure Debut</th>
                            <th scope="col">Heure Fin</th>
                            <th scope="col">Etat</th>
                             <th scope="col">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                      
                        {% for plannification in pagination %}
                            <tr>
                                <th scope="row">{{ plannification.id }}</th>
                                <td>{{ plannification.dateAt|date('d-m-Y') }}</td>
                                <td>{{ plannification.heureDebutAt|date('H:i') }}</td>
                                <td>{{ plannification.heureFinAt|date('H:i') }}</td>
                                 <td>
                                    {% if plannification.isEtat %}
                                        Effectuer
                                    {% else %}
                                        Pas effectuer
                                    {% endif %}
                                </td>
                                
                                <td>
                                    <!-- Ajoutez ici vos options, par exemple un lien vers la modification ou la suppression -->
                                    <a href="#">Modifier</a> | 
                                        
                                        <label for="" class="form-label">Options</label>
                                        <select
                                            class="form-select form-select-lg "
                                            name=""
                                            id=""
                                        >
                                            <option value="" selected>Valider cours</option>
                                            <option value="">Annuler cours</option>
                                        </select>
                                    
                                    
                                </td>
                               
                            </tr>
                        {% endfor %}

                    </tbody>
                    </table>
                     <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                  
            </div>

            <style>
                .navigation > .pagination {
                    width:160px;
                    display:flex;
                    justify-content:space-between;
                }
                .navigation > .pagination > * {
                    padding:0.5rem;
                    background: purple;
                    color:white;
                    

                }
            </style>

{% endblock %}